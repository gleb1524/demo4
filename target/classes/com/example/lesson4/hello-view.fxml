<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.lesson4.HelloController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <TextArea minHeight="550" fx:id="textArea" VBox.vgrow="ALWAYS" editable="false" maxHeight="Infinity"
              promptText="Введите текст"/>

    <BorderPane>
        <bottom>
            <HBox>
                <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="Введите текст" onAction="#enterBtn"/>
                <Button text="Отправить!" onAction="#enterBtn"/>
            </HBox>
        </bottom>
    </BorderPane>
</VBox>